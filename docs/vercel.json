{
  "version": 2,
  "builds": [
    { "src": "api/**/*.py", "use": "@vercel/python" }
  ],
  "rewrites": [
    { "source": "/api/users/register", "destination": "/api/users?route=register" },
    { "source": "/api/users/login", "destination": "/api/users?route=login" },
    { "source": "/api/users/verify/start", "destination": "/api/users?route=verify-start" },
    { "source": "/api/users/verify", "destination": "/api/users?route=verify" },
    { "source": "/api/users/me", "destination": "/api/users?route=me" },
    { "source": "/api/users/progress", "destination": "/api/users?route=progress" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/docs/(.*)", "destination": "/$1" }
  ],
  "redirects": [
    { "source": "/", "destination": "/login.html", "statusCode": 308 }
  ],
  "cleanUrls": true
}